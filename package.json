{
  "name": "condensed-email",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.3",
    "@fortawesome/fontawesome-free-solid": "^5.0.6",
    "@fortawesome/react-fontawesome": "0.0.17",
    "bootstrap": "^4.0.0",
    "concurrently": "^3.5.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1",
    "reactstrap": "^5.0.0-beta"
  },
  "scripts": {
    "generate-mock": "nodemon --watch mock-api/data mock-api/generate-data",
    "start-mockserver": "json-server --watch mock-api/db.json --port 3001",
    "start-mockapi": "concurrently -k \"npm run generate-mock\" \"npm run start-mockserver\"",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "concurrently -k \"npm run generate-mock\" \"npm run start-mockserver\" \"npm run watch-css\" \"npm run start-js\"",
    "build": "npm run build-css && react-scripts build",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "eslint": "^4.18.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "json-schema-faker": "^0.4.7",
    "node-sass-chokidar": "0.0.3",
    "nodemon": "^1.15.0"
  }
}
